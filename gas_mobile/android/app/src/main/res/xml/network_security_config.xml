<?xml version="1.0" encoding="utf-8"?>
<network-security-config>
    <!-- Production/Development configuration: HTTPS with ngrok -->
    <!-- Updated to use ngrok for development: https://tetrapodic-riotous-rosario.ngrok-free.dev -->
    
    <!-- Default config: accept HTTPS with system certificates (ngrok included) -->
    <default-config cleartextTrafficPermitted="false">
        <trust-anchors>
            <certificates src="system" />
        </trust-anchors>
    </default-config>
</network-security-config>
